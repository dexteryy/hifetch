# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true

[*.{js,jsx}]
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = true

[*.{css,scss}]
indent_size = 2
trim_trailing_whitespace = true

[*.{html}]
indent_size = 2
trim_trailing_whitespace = true

[*.{json,yml,yaml}]
indent_size = 2
trim_trailing_whitespace = true

[{.babelrc,.jscrc,.flowconfig}]
indent_size = 2
trim_trailing_whitespace = true
