# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true

[*.{js,jsx,ts,tsx,es6,sh,rb}]
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = true

[*.{py}]
indent_size = 4
max_line_length = 80
trim_trailing_whitespace = true

[*.{css,scss,less,html,json,yml,yaml}]
indent_size = 2
trim_trailing_whitespace = true
